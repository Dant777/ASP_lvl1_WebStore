@model WebStore.ViewModels.CatalogViewModel
@{
    ViewData["Title"] = "Shop";

}

<section id="advertisement">
    <div class="container">
        <img src="~/images/shop/advertisement.jpg" alt="" />
    </div>
</section>

<section>
     <div class="container">
        <div class="row">
            <div class="col-sm-3">
                @Html.PartialAsync("Partial/_LeftSideBar")
            </div>

            <div class="col-sm-9 padding-right">
                @Html.PartialAsync("Partial/_ProductItems", Model.Products)
            </div>
        </div>
    </div>
</section>

